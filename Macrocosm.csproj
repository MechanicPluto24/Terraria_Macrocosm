    <None Remove="Assets\Textures\UI\WidePanelBorder.png" />
    <None Remove="Assets\Textures\UI\WidePanelHoverBorder.png" />
    <None Remove="Content\Buffs\Debuffs\HandheldEngineOverheat.png" />
    <None Remove="Content\Items\Ammo\InvarArrow.png" />
    <None Remove="Content\Items\Ammo\InvarBullet.png" />
    <None Remove="Content\Rockets\Textures\Checklist\BloodMoon_NotMet.png" />
    <None Remove="Content\Rockets\Textures\Checklist\Boss_NotMet.png" />
    <None Remove="Content\Rockets\Textures\Checklist\Invasion_NotMet.png" />
    <None Remove="Content\Rockets\Textures\Checklist\Selected_NotMet.png" />
    <None Remove="Assets\Textures\UI\Inventory\DepositAll.png" />
    <None Remove="Assets\Textures\UI\Inventory\LootAll.png" />
    <None Remove="Assets\Textures\UI\Inventory\QuickStack.png" />
